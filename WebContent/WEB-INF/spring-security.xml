<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security 
		http://www.springframework.org/schema/security/spring-security-3.0.xsd">

	<security:global-method-security secured-annotations="enabled" />

	<security:http auto-config="true" use-expressions="true" access-denied-page="/pages/denied.jsf" >
		<security:intercept-url pattern="/pages/home.jsf" filters="none" />
		<security:intercept-url pattern="/pages/register.jsf" filters="none" />
		<security:intercept-url pattern="/pages/**" access="hasAnyRole('ROLE_USER')" />
		<security:form-login
				login-page="/pages/home.jsf" 
				authentication-failure-url="/pages/home.jsf?error=true" 
				default-target-url="/pages/welcome.jsf"/>
		<security:logout 
				invalidate-session="true" 
				logout-success-url="/pages/home.jsf" 
				logout-url="/pages/logout.jsf"/>
	</security:http>

	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userService">
			<security:password-encoder ref="passwordEncoder"/>
		</security:authentication-provider>
	</security:authentication-manager>
	
	<bean class="org.springframework.security.authentication.encoding.Md5PasswordEncoder" id="passwordEncoder"/>

    <bean id="userService" class="org.springframework.security.core.userdetails.jdbc.JdbcDaoImpl">
    	<property name="dataSource" ref="dataSource" />
        <property name="enableGroups" value="true" />
    	<property name="enableAuthorities" value="false" />
    </bean>
</beans>

