<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	
	<navigation-rule>
		<from-view-id>/pages/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{registerBean.add}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{registerBean.add}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/pages/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/pages/development.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{codeBean.open}</from-action>
			<from-outcome>open</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{codeBean.close}</from-action>
			<from-outcome>close</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{codeBean.insertValue}</from-action>
			<from-outcome>insertValue</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{fileBean.move}</from-action>
			<from-outcome>move</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{fileBean.rename}</from-action>
			<from-outcome>rename</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{fileBean.delete}</from-action>
			<from-outcome>delete</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{folderBean.rename}</from-action>
			<from-outcome>rename</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{folderBean.delete}</from-action>
			<from-outcome>delete</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{fileUploadBean.close}</from-action>
			<from-outcome>close</from-outcome>
			<to-view-id>/pages/development.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<validator>
		<validator-id>usernameDisponibilityValidator</validator-id>
		<validator-class>ipn.escom.webide.validation.username.UsernameDisponibilityValidator</validator-class>
		<attribute>
			<attribute-name>userDAO</attribute-name>
			<attribute-class>ipn.escom.webide.dao.user.UserDAOImpl</attribute-class>
		</attribute>
	</validator>
	
	<validator>
		<validator-id>emailDisponibilityValidator</validator-id>
		<validator-class>ipn.escom.webide.validation.email.EmailDisponibilityValidator</validator-class>
		<attribute>
			<attribute-name>userDAO</attribute-name>
			<attribute-class>ipn.escom.webide.dao.user.UserDAOImpl</attribute-class>
		</attribute>
	</validator>
	
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
</faces-config>
